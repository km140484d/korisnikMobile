<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<ImageView-->
                <!--android:id="@+id/search_item_image"-->
                <!--android:layout_width="75dp"-->
                <!--android:layout_height="75dp"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:src="@drawable/person_holder"/>-->
            <!--android:layout_toRightOf="@id/search_item_image"-->

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/search_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdasda"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/search_item_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="asdasda"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="10dp"/>

                <RatingBar
                    android:id="@+id/search_item_rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/search_layout_margin"
                    android:layout_marginLeft="10dp"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="1.0"
                    android:scaleX="1.25"
                    android:scaleY="1.25"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center">
                <Button
                    android:id="@+id/profile_item_button"
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_button_css"
                    android:drawableRight="@drawable/ic_profile_black"
                    android:paddingLeft="15dp"
                    android:text="@string/profile"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:paddingRight="15dp"/>

                <Button
                    android:id="@+id/mail_item_button"
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_button_css"
                    android:drawableRight="@drawable/ic_mail_black"
                    android:paddingLeft="10dp"
                    android:text="@string/request"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:paddingRight="15dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>