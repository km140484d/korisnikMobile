<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/update_basic_relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:gravity="center">
                <Button
                    android:id="@+id/customer_item_profile_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/circular_button_css"
                    android:drawableRight="@drawable/ic_user_white"
                    android:paddingRight="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:labelFor="@id/customer_item_email"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/customer_item_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="mk@gmail.com"
                    android:textColor="@color/colorMenuLightBlue"
                    android:textStyle="italic"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"
                    android:labelFor="@id/customer_item_phone"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/customer_item_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="061/2780123"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_rank"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/customer_item_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#3"
                android:textColor="@color/darkRed"
                android:textStyle="bold"
                android:textSize="40sp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/customer_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:background="#ffffff"
        android:text="Mirjana Konjikovac"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="italic" />
</RelativeLayout>